<h1> Reset your password?</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |form| %>
   <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>  
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control", placholder: "Enter your Password" %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:"form-control", placholder: "Confirm Password" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Reset Password", class:"btn btn-primary" %>
  </div>
<% end %>